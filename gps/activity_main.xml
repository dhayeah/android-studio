<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<TextView
    android:id="@+id/long2"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="44dp"
    android:layout_marginLeft="44dp"
    android:layout_marginTop="24dp"
    android:text="000.0000000"
    android:textSize="16sp"
    app:layout_constraintStart_toEndOf="@+id/long2_title"
    app:layout_constraintTop_toBottomOf="@+id/lat2" />

<TextView
    android:id="@+id/lat2_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="128dp"
    android:layout_marginLeft="128dp"
    android:layout_marginTop="28dp"
    android:text="Latitude"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:textColor="#0C1B73"
    android:textSize="14sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_get_coord" />

<TextView
    android:id="@+id/lat2"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="44dp"
    android:layout_marginLeft="44dp"
    android:layout_marginTop="28dp"
    android:text="000.0000000"
    android:textSize="16sp"
    app:layout_constraintStart_toEndOf="@+id/lat2_title"
    app:layout_constraintTop_toBottomOf="@+id/btn_get_coord" />

<TextView
    android:id="@+id/long2_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="116dp"
    android:layout_marginLeft="116dp"
    android:layout_marginTop="20dp"
    android:text="Longitude"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:textColor="#0C1B73"
    android:textSize="14sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/lat2_title" />

<EditText
    android:id="@+id/place"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:ems="10"
    android:hint="Place"
    android:inputType="textPersonName"
    android:minHeight="48dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView3" />

<Button
    android:id="@+id/btn_get_coord"
    android:layout_width="140dp"
    android:layout_height="48dp"
    android:layout_marginTop="20dp"
    android:background="#1DE9B9"
    android:text="Get Coordinates"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.509"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/place" />

<TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="140dp"
    android:layout_marginRight="140dp"
    android:text="Enter a Location"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    android:textColor="#06135A"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/divider" />

<Button
    android:id="@+id/btn_gps"
    android:layout_width="212dp"
    android:layout_height="48dp"
    android:layout_marginBottom="20dp"
    android:background="#1DE9B9"
    android:text="Get Current Coordinates"
    app:layout_constraintBottom_toTopOf="@+id/divider"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.502"
    app:layout_constraintStart_toStartOf="parent" />

<TextView
    android:id="@+id/lat1_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="124dp"
    android:layout_marginLeft="124dp"
    android:layout_marginBottom="68dp"
    android:text="Latitude"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:textColor="#0C1B73"
    android:textSize="14sp"
    app:layout_constraintBottom_toTopOf="@+id/btn_gps"
    app:layout_constraintStart_toStartOf="parent" />

<TextView
    android:id="@+id/lat1"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="64dp"
    android:layout_marginRight="64dp"
    android:layout_marginBottom="68dp"
    android:text="000.0000000"
    android:textSize="16sp"
    app:layout_constraintBottom_toTopOf="@+id/btn_gps"
    app:layout_constraintEnd_toEndOf="parent" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="136dp"
    android:layout_marginLeft="136dp"
    android:layout_marginBottom="112dp"
    android:text="Current Location"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    android:textColor="#06135A"
    app:layout_constraintBottom_toTopOf="@+id/btn_gps"
    app:layout_constraintStart_toStartOf="parent" />

<TextView
    android:id="@+id/long1"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="64dp"
    android:layout_marginRight="64dp"
    android:layout_marginBottom="28dp"
    android:text="000.0000000"
    android:textSize="16sp"
    app:layout_constraintBottom_toTopOf="@+id/btn_gps"
    app:layout_constraintEnd_toEndOf="parent" />

<TextView
    android:id="@+id/textView"
    android:layout_width="272dp"
    android:layout_height="62dp"
    android:layout_marginBottom="144dp"
    android:text="Location Finder"
    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
    android:textColor="#00695C"
    app:layout_constraintBottom_toTopOf="@+id/btn_gps"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.618"
    app:layout_constraintStart_toStartOf="parent" />

<TextView
    android:id="@+id/long1_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="128dp"
    android:layout_marginLeft="128dp"
    android:layout_marginBottom="28dp"
    android:text="Longitude"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:textColor="#0C1B73"
    android:textSize="14sp"
    app:layout_constraintBottom_toTopOf="@+id/btn_gps"
    app:layout_constraintStart_toStartOf="parent" />

<View
    android:id="@+id/divider"
    android:layout_width="409dp"
    android:layout_height="1dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.461" />

</androidx.constraintlayout.widget.ConstraintLayout>


